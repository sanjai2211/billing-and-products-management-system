datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String?
  address     Address?
  phoneNumber String?
}
model ShopDetails {
  id          String   @id @default(auto()) @map("_id")
  name        String
  address     Json     @json({ constraints: { allowedKeys: ["addressLine", "addressLine2", "district", "pinCode", "city"] } })
  phoneNumbers String[]
  email       String   @unique
}


type Address {
  street String
  city   String
  state  String
  zip    String
}
