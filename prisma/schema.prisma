datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String?
  phoneNumber String?
}
model ShopDetails {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  address     Address?
  phoneNumbers String[]
  email       String   @unique
}


type Address {
  addressLine1 String
  addressLine2 String
  street String
  city   String
  state  String
  zip    String
}
