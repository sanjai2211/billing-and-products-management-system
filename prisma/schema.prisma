datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  email       String       @unique
  password    String
  name        String?
  address     Address?
  phoneNumber String?
  shopDetails ShopDetails?
}

model ShopDetails {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  address      Address?
  email        String
  phoneNumbers String[]
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique @db.ObjectId
}

type Address {
  addressLine1 String
  addressLine2 String
  city         String
  state        String
  zip          String
}
